{
    "name": "vanaf1979/wordpress-composer",
    "description": "Project template for WordPress projects with composer",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
      {
        "name": "",
        "role": ""
      }
    ],
    "repositories":[
      {
        "type":"composer",
        "url":"https://wpackagist.org"
      }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
      "sort-packages": true
    },
    "require": {
        "composer/installers": "^1.2",
        "drupal-composer/preserve-paths": "0.1.*",
        "johnpbloch/wordpress-core": "~5.0",
        "johnpbloch/wordpress-core-installer": "^1.0",
        "wpackagist-plugin/advanced-custom-fields": "^5.7",
        "wpackagist-plugin/breadcrumb-navxt": "^6.2",
        "wpackagist-plugin/cache-enabler": "^1.3",
        "wpackagist-plugin/cf7-polylang": "^2.3",
        "wpackagist-plugin/cms-tree-page-view": "^1.6",
        "wpackagist-plugin/coblocks": "^1.9",
        "wpackagist-plugin/contact-form-7": "^5.1",
        "wpackagist-plugin/polylang": "^2.5",
        "wpackagist-plugin/resmushit-image-optimizer": "^0.1.22"
    },
    "extra": {
      "installer-paths": {
        "app/plugins/{$name}/": ["type:wordpress-plugin"],
        "app/themes/{$name}/": ["type:wordpress-theme"]
      },
      "preserve-paths": [
        "/wp-config.php",
        "app/uploads"
      ],
      "wordpress-install-dir": "wp"
    }
  }
